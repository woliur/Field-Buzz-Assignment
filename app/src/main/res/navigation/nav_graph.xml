<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.fieldbuzz.view.fragment.LogInFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.example.fieldbuzz.view.fragment.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" >
        <action
            android:id="@+id/action_userInfoFragment_to_fileUploadFragment"
            app:destination="@id/fileUploadFragment" />
    </fragment>
    <fragment
        android:id="@+id/fileUploadFragment"
        android:name="com.example.fieldbuzz.view.fragment.FileUploadFragment"
        android:label="fragment_file_upload"
        tools:layout="@layout/fragment_file_upload" />
</navigation>